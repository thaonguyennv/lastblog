<%=  form_for (@post) do |f| %>
  <%= render "shared/error_message" %>

  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category"}) %>
  <br>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title, placeholder: "Type the post title here" %>
  <br>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content, placeholder: "Type the post content here" %>
  <br>

  <%= f.submit  %>

<% end %>
